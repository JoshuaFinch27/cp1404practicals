BoxLayout:
    orientation: "vertical"

    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: distance_miles_input
            text: ""
            font_size: 20
            on_text: app.calculate_mile_km_conversion()

        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.5
            Button:
                text: "Up"
                on_press: app.increment_input(1)

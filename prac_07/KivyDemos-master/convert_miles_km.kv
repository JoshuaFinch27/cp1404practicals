BoxLayout:
    orientation: "vertical"

    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: distance_miles_input
            text: "0"
            font_size: 48
            on_text: app.handle_calculate()

        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.5
            Button:
                text: "Up"
                on_press: app.handle_increment(1)
            Button:
                text: "Down"
                on_press: app.handle_increment(-1)

